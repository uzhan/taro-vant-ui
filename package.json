{
  "private": true,
  "name": "@uzhan/taro-vant-ui",
  "version": "0.0.8-alpha.1",
  "description": "vant ui for Taro",
  "author": "uzhan.net.cn",
  "homepage": "https://github.com/uzhan/taro-vant-ui#readme",
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build",
    "build:component": "lerna run --scope taro-vant-ui build",
    "clean": "lerna run clean",
    "clean:component": "lerna run --scope taro-vant-ui clean",
    "publish": "lerna publish from-git --yes"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^2.26.0",
    "@typescript-eslint/parser": "^2.26.0",
    "conventional-changelog-cli": "^2.0.31",
    "cross-env": "^7.0.2",
    "eslint": "^6.8.0",
    "eslint-config-o2team": "^0.1.7",
    "eslint-config-prettier": "^6.10.1",
    "eslint-import-resolver-custom-alias": "^1.2.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^3.0.0",
    "husky": "^4.2.3",
    "jest": "27.0.3",
    "jest-axe": "5.0.1",
    "jest-environment-node": "27.4.4",
    "jest-image-snapshot": "4.5.1",
    "jest-puppeteer": "6.0.0",
    "lerna": "^4.0.0",
    "lint-staged": "^10.1.2",
    "prettier": "^2.0.3",
    "typescript": "^4.5.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint --quiet --cache --fix",
    "src/**/*.less": "stylelint --syntax less --fix"
  }
}